<!-- Latest news section -->
<div class="card">
  <div class="card-header">
    Latest news
  </div>
  <div class="card-body">
    <h5 class="card-title">Last observation on <%= @epoches.order("date").reverse.first.date %>:</h5>

    <!-- checking for surprising changes in most recent epoch -->
    <% latest_epoch = @epoches.order("date").reverse.first %>
    <% latest_epoch.sources.distinct.each do |source| %>

    	<% epoch_before = source.epoches.distinct.order("date").reverse.second %>

    	<% if(epoch_before != nil) %>

        <% increase_freqs = Array.new %>
        <% decrease_freqs = Array.new %>

    		<% source.frequencies.distinct.each do |freq| %>

    			<% value_now = @results.where(:epoch_id => latest_epoch.id, :frequency_id => freq.id, :source_id => source.id).average(:value_jy)%>
    			<% value_before = @results.where(:epoch_id => epoch_before.id, :frequency_id => freq.id, :source_id => source.id).average(:value_jy)%>

          <%if value_before != nil and value_now != nil %>
            <% if value_now>1.2*value_before %>
              <% increase_freqs.push(freq) %>
            <% elsif value_now<0.9*value_before%>
              <% decrease_freqs.push(freq) %>
            <%end%>
          <%end%>
    		<%end%>

      <% if increase_freqs.any? %>
      <%= link_to source.j2000_name, source %> increased by over 20% at <%= increase_freqs.map(&:freq_ghz).sort %> GHz compared to last detection on <%= epoch_before.date %> <br/>
      <% end %>
      <% if decrease_freqs.any? %>
      <%= link_to source.j2000_name, source %> decreased by over 20% at <%= decrease_freqs.map(&:freq_ghz).sort %> GHz compared to last detection on <%= epoch_before.date %> <br/>
      <% end %>
    	<% else %>
    		<%= link_to source.j2000_name, source %> detected for the first time!</br>
    	<%end%>
    <%end%>
  </div>
</div>







